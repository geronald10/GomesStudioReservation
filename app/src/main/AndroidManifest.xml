<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gomes.com.gomesstudioreservation">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_USER_DICTIONARY" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".BaseActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".BookingActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".ManageBookingActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity android:name=".BookingReviewActivity" />

        <activity android:name=".PaymentActivity" />

        <activity android:name=".BookingHistoryActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".utilities.BasicCalendar"
            android:noHistory="true"
            android:parentActivityName=".BookingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".BookingActivity" />
        </activity>


        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" />


        <activity android:name=".ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".AboutUsActivity" />

        <activity android:name=".PrivacyPolicyActivity" />

        <activity android:name=".BookingDetailActivity"/>

        <provider
            android:name=".data.ReservationProvider"
            android:authorities="@string/content_authority"
            android:exported="false"
            android:multiprocess="true" />

    </application>

</manifest>