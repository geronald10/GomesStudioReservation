<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_booking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gomes.com.gomesstudioreservation.EditBookingActivity">

    <ImageView
        android:id="@+id/iv_header_edit_booking"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:contentDescription="@string/headereditreservation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/tv_edit_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_booking_label"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_header_edit_booking"
        app:layout_constraintLeft_toLeftOf="@+id/iv_header_edit_booking"
        app:layout_constraintRight_toRightOf="@+id/iv_header_edit_booking"
        app:layout_constraintTop_toTopOf="@+id/iv_header_edit_booking" />

    <TextView
        android:id="@+id/tv_studio_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/studio_name_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_header_edit_booking"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp" />

    <TextView
        android:id="@+id/tv_studio_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="LALALA YEYE"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_studio_name_label"
        app:layout_constraintLeft_toRightOf="@+id/tv_studio_name_label"
        app:layout_constraintTop_toTopOf="@+id/tv_studio_name_label"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_room_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/room_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_studio_name_label"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_studio_name_label" />

    <TextView
        android:id="@+id/tv_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kenanga"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/tv_room_label"
        app:layout_constraintBottom_toBottomOf="@+id/tv_room_label"
        app:layout_constraintLeft_toLeftOf="@+id/tv_studio_name" />

    <TextView
        android:id="@+id/tv_tanggal_booking_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tanggal_booking_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/tv_studio_name_label"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp" />

    <TextView
        android:id="@+id/tv_tanggal_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="23 Februari 2017"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_studio_name_label"
        app:layout_constraintRight_toRightOf="@+id/tv_tanggal_booking_label"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/tv_room_label" />

    <TextView
        android:id="@+id/tv_jadwal_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/jadwal_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_studio_name_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_room_label" />

    <TextView
        android:id="@+id/tv_jadwal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. 10.00 - 12.00"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_room"
        app:layout_constraintTop_toTopOf="@+id/tv_jadwal_label" />

    <TextView
        android:id="@+id/tv_band_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:text="@string/band_name_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_jadwal" />

    <EditText
        android:id="@+id/edt_editted_band_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="LALA YEYE"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_band_name_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_band_name_label"
        app:layout_constraintRight_toRightOf="@+id/tv_tanggal_booking_label"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/btn_booking_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="@string/simpan_perubahan_button_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list_jadwal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_booking_button"
        app:layout_constraintLeft_toLeftOf="@+id/edt_editted_band_name"
        app:layout_constraintRight_toRightOf="@+id/edt_editted_band_name"
        app:layout_constraintTop_toBottomOf="@+id/edt_editted_band_name" />

</android.support.constraint.ConstraintLayout>
